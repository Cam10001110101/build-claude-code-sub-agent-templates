{
  "mcpServers": {
    "social-platforms": {
      "command": "node",
      "args": [".claude/mcp-servers/social-platforms/dist/index.js"],
      "env": {
        "TWITTER_API_KEY": "$TWITTER_API_KEY",
        "LINKEDIN_ACCESS_TOKEN": "$LINKEDIN_ACCESS_TOKEN",
        "REDDIT_CLIENT_ID": "$REDDIT_CLIENT_ID"
      }
    },
    "research-tools": {
      "command": "node", 
      "args": [".claude/mcp-servers/research-tools/dist/index.js"],
      "env": {
        "FIRECRAWL_API_KEY": "$FIRECRAWL_API_KEY",
        "SERP_API_KEY": "$SERP_API_KEY"
      }
    },
    "ai-content": {
      "command": "node",
      "args": [".claude/mcp-servers/ai-content/dist/index.js"],
      "env": {
        "ANTHROPIC_API_KEY": "$ANTHROPIC_API_KEY",
        "OPENAI_API_KEY": "$OPENAI_API_KEY"
      }
    },
    "analytics": {
      "command": "node",
      "args": [".claude/mcp-servers/analytics/dist/index.js"]
    },
    "media-processing": {
      "command": "node",
      "args": [".claude/mcp-servers/media-processing/dist/index.js"]
    },
    "notifications": {
      "command": "node",
      "args": [".claude/mcp-servers/notifications/dist/index.js"],
      "env": {
        "SLACK_BOT_TOKEN": "$SLACK_BOT_TOKEN",
        "DISCORD_BOT_TOKEN": "$DISCORD_BOT_TOKEN"
      }
    }
  }
}